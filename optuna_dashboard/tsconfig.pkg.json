{ 
  "compilerOptions": {
    "isolatedModules": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "esModuleInterop": true,
    "rootDir": "./ts",
    "outDir": "./pkg",
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./types",
    "strict": true,
    "jsx": "react-jsx"
  },
  "include": ["ts/components/App.tsx"],
}